@model UnifiedFrontend.Models.PaymentModel.PaymentViewModel

<h1>Payment Details</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post" asp-action="ProcessPayment" asp-controller="Payment">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Amount" />

    <div class="form-group">
        <label for="CardNumber">Card Number</label>
        <input asp-for="CardNumber" class="form-control" required />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CardholderName">Cardholder Name</label>
        <input asp-for="CardholderName" class="form-control" required />
        <span asp-validation-for="CardholderName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ExpiryDate">Expiry Date</label>
        <input asp-for="ExpiryDate" type="month" class="form-control" required />
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CVC">CVC</label>
        <input asp-for="CVC" class="form-control" required />
        <span asp-validation-for="CVC" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Total Amount: </label>
        <strong>@Model.Amount.ToString("C")</strong>
    </div>

    <button type="submit" class="btn btn-primary">Pay Now</button>
</form>