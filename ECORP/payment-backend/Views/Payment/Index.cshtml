@model PaymentService.Model.Payment

<h2>Payment Processing</h2>

<form asp-action="PostPayment" method="post">
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Currency">Currency</label>
        <input asp-for="Currency" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethodToken">Payment Method Token</label>
        <input asp-for="PaymentMethodToken" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit Payment</button>
</form>

@if (ViewBag.PaymentStatus != null)
{
    <div class="alert alert-info">
        @ViewBag.PaymentStatus
    </div>
}