@model List<UnifiedFrontend.Models.ProductCatalogModel.ProductViewModel>

@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <form method="get" action="@Url.Action("Index", "Products")">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by name or category" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form method="get" action="@Url.Action("Index", "Products")">
            <select name="sort" class="form-select" onchange="this.form.submit()">
                <option value="">Sort By</option>
                <option value="name">Name</option>
                <option value="price">Price</option>
                <option value="category">Category</option>
            </select>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a href="@Url.Action("Create", "Products")" class="btn btn-success">Add New Product</a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.CategoryName</td>
                    <td>@product.Description</td>
                    <td>
                        <img src="@product.ImageUrl" alt="@product.Name" style="max-height: 100px;" />
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Products", new { id = product.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                        <form method="post" action="@Url.Action("Delete", "Products", new { id = product.ProductId })" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}
